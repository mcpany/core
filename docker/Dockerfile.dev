FROM golang:1.24-bookworm

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    wget \
    git \
    make \
    unzip \
    sudo \
    python3 \
    python3-pip \
    python3-venv \
    nodejs \
    npm \
    docker.io \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /workspace

# Copy necessary files for 'make prepare'
COPY Makefile go.mod go.sum requirements.txt ./
COPY tools/ ./tools/
COPY proto/ ./proto/

# Run make prepare to install tools
ENV TOOL_INSTALL_DIR=/tools
# Install pre-commit globally to be available in CI mode
RUN pip3 install --break-system-packages pre-commit fastmcp
# Set CI=true to skip venv setup in Makefile
ENV CI=true
RUN mkdir -p /tools && make prepare && chmod -R 777 /tools

# Add installed tools to PATH
ENV PATH="/tools:${PATH}"
ENV GOPATH="/tools/go"
ENV PATH="$GOPATH/bin:$PATH"

CMD ["/bin/bash"]
